.identity-background-section-01
  .login-wrapper
    .login
      img.logo(src="assets/images/logo.png")
      h1 {{'identity.forgot-password.title' | translate}}
      div(*ngIf="info")
        div
          strong {{ info.title.key  | translate }} {{ info.title.arguments.email | translate }}
          p {{ info.description.key | translate }}
        div
          a(routerLink="/sign-in") {{ 'general.continue' | translate }}
      div(*ngIf="!info")
        p {{'identity.forgot-password.forgot-password_txt' | translate}}
        br
        form([formGroup]="forgotPasswordForm", (ngSubmit)="onSubmit()", novalidate)
          .field
            label.visuallyhidden {{'identity.forgot-password.email_label' | translate}}
            input(type="email", formControlName="email", placeholder="{{'identity.forgot-password.email_label' | translate}}", required)
          .field.warning(*ngIf="error")
            strong {{error.title.key | translate}}
            p {{error.description.key | translate }}
          .field
            button.btn-login(type="submit", [disabled]="!forgotPasswordForm.valid") {{'identity.forgot-password.button' | translate}}
        hr
        p {{'identity.sign-up.sign_in_title' | translate}}
          br
          a.bluelink(routerLink="/sign-in") {{'identity.sign-up.sign_in_link' | translate}}

  .change-language
    .select
      select([ngModel]="language", (ngModelChange)="onLanguageChanged($event)")
        option(value="ar") عرب
        option(value="ca") Català
        option(value="de") Deutsch
        option(value="en") English
        option(value="es") Español
        option(value="eu") Euskal
        option(value="fr") Français
        option(value="gl") Galego
        option(value="pt") Português
        option(value="ja") 日本語
        option(value="sc") 简体中文
        option(value="tc") 簡體中文
