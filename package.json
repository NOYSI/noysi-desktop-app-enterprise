{
  "name": "noysi-desktop",
  "version": "1.1.6",
  "description": "",
  "homepage": "https://noysi.com/",
  "scripts": {
    "watch": "webpack -w",
    "start": "electron ./dist",
    "pack": "build --dir",
    "pack:linux": "build --dir --linux --x64",
    "pack:osx": "build --mac",
    "pack:win": "build --dir --win --x64",
    "build:win": "build --win --x64",
    "build:win32": "build --win --ia32",
    "build:winall": "build --win --ia32 --x64",
    "build:linux": "build --linux --x64",
    "build:linux32": "build --linux --ia32"
  },
  "build": {
    "appId": "com.noysi.desktop",
    "compression": "maximum",
    "linux": {
      "icon": "./build",
      "target": "deb",
      "maintainer": "noysi@noysi.com"
    },
    "deb": {
      "priority": "optional",
      "artifactName": "${name}_${version}.${ext}"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "identity": "COMUNICACIONES GOLBER SL (RZ4979LFQ9)",
      "artifactName": "${name}-${version}.${ext}",
      "target": "pkg"
    },
    "dmg": {
      "contents": [
        {
          "x": 170,
          "y": 260
        },
        {
          "x": 460,
          "y": 260,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "artifactName": "${name}-setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true
    },
    "directories": {
      "output": "releases",
      "app": "dist"
    }
  },
  "dependencies": {
    "@angular/common": "2.1.2",
    "@angular/compiler": "2.1.2",
    "@angular/core": "2.1.2",
    "@angular/forms": "2.1.2",
    "@angular/http": "2.1.2",
    "@angular/platform-browser": "2.1.2",
    "@angular/platform-browser-dynamic": "2.1.2",
    "@angular/router": "3.1.2",
    "core-js": "2.4.1",
    "electron-context-menu": "^0.9.1",
    "fs-extra": "1.0.0",
    "ng2-tooltip-directive": "1.1.2",
    "ng2-translate": "4.0.0",
    "reqwest": "2.0.5",
    "rxjs": "5.0.3",
    "teeny-conf": "1.1.0",
    "xhr2": "0.1.3",
    "zone.js": "0.7.6"
  },
  "devDependencies": {
    "@types/core-js": "0.9.34",
    "@types/electron": "1.4.38",
    "@types/fs-extra": "0.0.34",
    "@types/node": "6.0.46",
    "angular2-template-loader": "0.6.0",
    "copy-webpack-plugin": "4.0.0",
    "css-loader": "0.25.0",
    "electron": "1.6.10",
    "electron-builder": "19.56.2",
    "electron-pdf-window": "1.0.8",
    "file-loader": "0.9.0",
    "html-webpack-plugin": "2.24.1",
    "json-loader": "0.5.7",
    "node-sass": "4.14.1",
    "pug-html-loader": "1.0.9",
    "raw-loader": "0.5.1",
    "sass-loader": "4.0.2",
    "scss-loader": "0.0.1",
    "style-loader": "0.13.1",
    "ts-loader": "1.1.0",
    "typescript": "2.1.5",
    "webpack": "2.1.0-beta.25"
  },
  "author": "",
  "license": "ISC"
}
